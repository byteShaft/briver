<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_welcome_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp"
        android:animateLayoutChanges="true">

        <EditText
            android:id="@+id/et_change_password_old_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_welcome_edit_text"
            android:textCursorDrawable="@null"
            android:textSize="18dp"
            android:hint="Old Password"
            android:maxLength="20"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:inputType="textPassword"
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@mipmap/ic_edit_text_password" />

        <EditText
            android:id="@+id/et_change_password_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_welcome_edit_text"
            android:textCursorDrawable="@null"
            android:textSize="18dp"
            android:hint="New Password"
            android:maxLength="20"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:inputType="textPassword"
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@mipmap/ic_edit_text_password" />

        <EditText
            android:id="@+id/et_change_password_new_password_repeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_welcome_edit_text"
            android:textCursorDrawable="@null"
            android:textSize="18dp"
            android:hint="Repeat Password"
            android:maxLength="20"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:inputType="textPassword"
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@mipmap/ic_edit_text_password" />

        <Button
            android:id="@+id/btn_change_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textSize="18dp"
            android:text="Change"
            android:padding="10dp"
            android:textColor="@drawable/button_text_color"
            android:background="@drawable/background_button" />
        </LinearLayout>
</RelativeLayout>