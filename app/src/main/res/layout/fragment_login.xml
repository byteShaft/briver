<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/layout_fragment_login"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <ImageView
        android:id="@+id/iv_welcome_logo_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/logo_app_main"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:id="@+id/ll_welcome_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp">

        <EditText
            android:id="@+id/et_login_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_welcome_edit_text"
            android:textCursorDrawable="@null"
            android:textSize="18dp"
            android:hint="E-Mail"
            android:maxLength="20"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@mipmap/ic_edit_text_email" />

        <EditText
            android:id="@+id/et_login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_welcome_edit_text"
            android:textCursorDrawable="@null"
            android:textSize="18dp"
            android:hint="Password"
            android:maxLength="20"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:inputType="textPassword"
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@mipmap/ic_edit_text_password" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textSize="18dp"
            android:text="Login"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:background="@drawable/background_button" />

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textSize="18dp"
            android:text="Register"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:background="@drawable/background_button"/>

        <TextView
            android:id="@+id/tv_forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:textSize="14dp"
            android:text="Forgot Password? Recover"/>
    </LinearLayout>
</RelativeLayout>