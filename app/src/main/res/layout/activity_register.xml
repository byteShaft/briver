<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/img_background_welcome"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:scaleX="1.02"
    android:scaleY="1.02"
    tools:context="com.byteshaft.briver.RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:scrollbars="none"
        android:overScrollMode="never">
    <LinearLayout
        android:id="@+id/ll_register"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_welcome_edit_text">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="User Type"
                android:textSize="18dp"
                android:textColor="#ffffff"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:weightSum="2">

                <RadioButton
                    android:id="@+id/rb_register_customer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="CUSTOMER"
                    android:padding="10dp"
                    android:button="@android:color/transparent"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:background="@drawable/background_radio_button"/>

                <RadioButton
                    android:id="@+id/rb_register_driver"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="DRIVER"
                    android:padding="10dp"
                    android:button="@android:color/transparent"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/background_radio_button"/>
            </RadioGroup>
        </LinearLayout>

        <EditText
            android:id="@+id/et_register_full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_welcome_edit_text"
            android:drawableLeft="@mipmap/ic_edit_text_full_name"
            android:inputType="textPersonName"
            android:drawablePadding="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Full Name"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textCursorDrawable="@null"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/et_register_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_welcome_edit_text"
            android:drawableLeft="@mipmap/ic_edit_text_email"
            android:drawablePadding="10dp"
            android:hint="E-Mail"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textCursorDrawable="@null"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/et_register_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_welcome_edit_text"
            android:drawableLeft="@mipmap/ic_edit_text_password"
            android:drawablePadding="10dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textCursorDrawable="@null"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/et_register_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_welcome_edit_text"
            android:drawableLeft="@mipmap/ic_edit_text_password"
            android:drawablePadding="10dp"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textCursorDrawable="@null"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btn_usr_create"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_button"
            android:padding="10dp"
            android:text="Create Account"
            android:textColor="#ffffff"
            android:textSize="18dp" />
    </LinearLayout>
    </ScrollView>
</RelativeLayout>
