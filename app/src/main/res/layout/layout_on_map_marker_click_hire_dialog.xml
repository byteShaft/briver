<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RatingBar
            android:id="@+id/rBar_driver_hiring_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:numStars="5"
            android:rating="4.3"
            android:scaleX="0.6"
            android:scaleY="0.6"/>
        <TextView
            android:id="@+id/tv_rBar_hiring_dialog_number_of_ratings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="#ffffff"
            android:text="(43)"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_driver_hire_dialog_full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:layout_marginLeft="15dp"
        android:textColor="#ffffff"/>
    <TextView
        android:id="@+id/tv_driver_hire_dialog_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textSize="14dp"
        android:textColor="#ffffff"/>
    <TextView
        android:id="@+id/tv_driver_hire_dialog_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textSize="14dp"
        android:textColor="#ffffff"/>
    <TextView
        android:id="@+id/tv_driver_hire_dialog_number_of_hires"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textSize="14dp"
        android:textColor="#ffffff"/>
    <TextView
        android:id="@+id/tv_driver_hire_dialog_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textSize="14dp"
        android:textColor="#ffffff"/>
    <TextView
        android:id="@+id/tv_driver_hire_dialog_driving_experience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textSize="14dp"
        android:textColor="#ffffff"/>
    <TextView
        android:id="@+id/tv_driver_hire_dialog_location_last_updated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textSize="14dp"
        android:textColor="#ffffff"/>
    <TextView
        android:id="@+id/tv_driver_hire_dialog_bio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textSize="14dp"
        android:textColor="#ffffff"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="Caution!"
        android:textSize="15dp"
        android:textColor="#ffa500"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="The MeetUp point will be your Current Location"
        android:textSize="10dp"
        android:textColor="#ffa500"/>
    <RelativeLayout
        android:id="@+id/buttonsLayout_one"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/btn_driver_hire_dialog_cancel"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/view_one"
            android:text="Cancel"
            android:textSize="12dp"
            android:textColor="#ffffff" />
        <View
            android:id="@+id/view_one"
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:background="#ffffff" />
        <Button
            android:id="@+id/btn_driver_hire_dialog_hire"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/view_one"
            android:text="Hire"
            android:textSize="12dp"
            android:textColor="#ffffff"
            android:textStyle="bold"/>
    </RelativeLayout>
</LinearLayout>