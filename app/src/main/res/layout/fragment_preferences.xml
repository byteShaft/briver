<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_preferences_driver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/background_edit_text"
                    android:orientation="vertical">

                    <Switch
                        android:id="@+id/switch_driver_availability"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="20dp"
                        android:text="Available for Service"
                        android:textColor="#ffffff"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center_horizontal"
                        android:text="Turning this switch to off will remove you from the map shown to the customer"
                        android:textColor="#ffffff"
                        android:textSize="12dp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/background_edit_text"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:text="Location Reporting Type"
                        android:textColor="#ffffff"
                        android:textSize="16dp" />

                    <RadioGroup
                        android:id="@+id/rg_preferences_driver_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <RadioButton
                            android:id="@+id/rb_preferences_driver_location_fixed"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/background_radio_button"
                            android:button="@android:color/transparent"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:text="Fixed"
                            android:textColor="#ffffff"
                            android:textSize="15dp" />

                        <RadioButton
                            android:id="@+id/rb_preferences_driver_location_interval"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/background_radio_button"
                            android:button="@android:color/transparent"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:text="Interval"
                            android:textColor="#ffffff"
                            android:textSize="15dp" />
                    </RadioGroup>


                    <Button
                        android:id="@+id/btn_preferences_driver_location_fixed_set"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/background_button"
                        android:padding="10dp"
                        android:text="Set Location"
                        android:textColor="@drawable/button_text_color"
                        android:textSize="16dp"
                        android:visibility="gone" />


                    <EditText
                        android:id="@+id/et_preferences_driver_location_interval_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/background_edit_text"
                        android:drawableLeft="@mipmap/ic_nav_timeline"
                        android:drawablePadding="10dp"
                        android:hint="Interval Time (Hours)"
                        android:inputType="number"
                        android:maxLength="2"
                        android:padding="10dp"
                        android:textColor="#ffffff"
                        android:textCursorDrawable="@null"
                        android:textSize="18dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_preferences_driver_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:padding="10dp"
                        android:textColor="#ffffff"
                        android:textSize="12dp" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_preferences_customer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_edit_text"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:text="Driver Search Radius"
                        android:textColor="#ffffff"
                        android:textSize="14dp" />

                    <EditText
                        android:id="@+id/et_preferences_customer_radius_for_driver"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/background_edit_text"
                        android:drawableLeft="@mipmap/ic_edit_text_radius"
                        android:drawablePadding="10dp"
                        android:hint="Radius (Kilometers)"
                        android:inputType="number"
                        android:maxLength="2"
                        android:padding="10dp"
                        android:textColor="#ffffff"
                        android:textCursorDrawable="@null"
                        android:textSize="18dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/background_edit_text"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:text="Vehicle Settings"
                        android:textColor="#ffffff"
                        android:textSize="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:weightSum="2">

                        <RadioButton
                            android:id="@+id/rb_preferences_customer_vehicle_type_mini"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/background_radio_button"
                            android:button="@android:color/transparent"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:text="MINI"
                            android:textColor="#ffffff"
                            android:textSize="15dp" />

                        <RadioButton
                            android:id="@+id/rb_preferences_customer_vehicle_type_hatchback"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/background_radio_button"
                            android:button="@android:color/transparent"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:text="HATCHBACK"
                            android:textColor="#ffffff"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="25dp"
                        android:weightSum="2">

                        <RadioButton
                            android:id="@+id/rb_preferences_customer_vehicle_type_sedan"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/background_radio_button"
                            android:button="@android:color/transparent"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:text="SEDAN"
                            android:textColor="#ffffff"
                            android:textSize="15dp" />

                        <RadioButton
                            android:id="@+id/rb_preferences_customer_vehicle_type_luxury"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/background_radio_button"
                            android:button="@android:color/transparent"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:text="LUXURY"
                            android:textColor="#ffffff"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/et_preferences_customer_vehicle_make"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/background_edit_text"
                        android:drawableLeft="@mipmap/ic_edit_text_vehicle_make"
                        android:drawablePadding="10dp"
                        android:hint="Vehicle Make"
                        android:inputType="textNoSuggestions"
                        android:maxLength="20"
                        android:padding="10dp"
                        android:textColor="#ffffff"
                        android:textCursorDrawable="@null"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/et_preferences_customer_vehicle_model"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_edit_text"
                        android:drawableLeft="@mipmap/ic_edit_text_calender"
                        android:drawablePadding="10dp"
                        android:hint="Vehicle Model (Yr)"
                        android:inputType="date"
                        android:maxLength="4"
                        android:padding="10dp"
                        android:textColor="#ffffff"
                        android:textCursorDrawable="@null"
                        android:textSize="18dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>